{% extends 'base.html.twig' %}

{% block body %}
    <main>
        <div class="container">
            <form method="post" class="main-form" action="#" enctype="multipart/form-data"  style="margin-bottom: 20px">

                <div class="mb-3">
                    <label for="post_title" class="required">Title</label>
                    <input type="text" id="post_title" name="post[title]" value="{{ form.vars.value.title }}" required="required" maxlength="50"
                           class="form-control">
                </div>

                <div class="mb-3">
                    <label for="post_description" class="required">Description</label>
                    <textarea id="post_description" name="post[description]" required="required"
                              class="form-control">{{ form.vars.value.description }}</textarea>
                </div>

                <div class="mb-3">
                    <label for="post_image">Image</label>
                    <input type="file" id="post_image" name="post[image]" class="form-control-file">
                </div>


                <div class="form-group">{{ form_row(form.date, {'attr': {'class': 'form-control'}}) }}</div>

                <button class="btn btn-success" type="submit">Save</button>

                {{ form_widget(form._token) }}
            </form>
            <a href="{{ path('post_admin') }}">
                <button class="btn btn-primary" type="submit">Cancel</button>
            </a>
        </div>
    </main>
{% endblock %}