{% extends 'base.html.twig' %}
{% block body %}
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark" style="display: inline-block">
        <a href="{{ path('post_list') }}" class="base-home">User mode</a>
    </nav>
    <main>
        <div class="container">
    <!-- Editable table -->
    <div class="card">
        <h3 class="card-header text-center font-weight-bold py-4">Your posts</h3>
        <a href="{{ path('post_create') }}" class="new-post">
        <button type="button" class="btn btn-success btn-sm">Add new</button>
        </a>
        <div class="card-body">
            <div id="table" class="table-editable">
                <table class="table table-bordered table-responsive-md table-striped text-center">
                    <thead>
                    <tr>
                        <th class="text-center">Id</th>
                        <th class="text-center">Title</th>
                        <th class="text-center">Description</th>
                        <th class="text-center">View</th>
                        <th class="text-center">Edit</th>
                        <th class="text-center">Delete</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for post in posts %}
                    <tr>
                        <td class="pt-3-half" contenteditable="true">{{ post.id }}</td>
                        <td class="pt-3-half" contenteditable="true">{{ post.title }}</td>
                        <td class="pt-3-half" contenteditable="true">{{ post.description|length > 50 ? post.description|slice(0, 50) ~ '...' : post.description }}</td>

                        <td>
                            <a href="{{ path('post_show', { 'id': post.id }) }}">
                            <span class="table-remove">
                                <button type="button" class="btn btn-success btn-rounded btn-sm  my-0">View</button>
                            </span>
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('post_edit', { 'id': post.id }) }}">
                            <span class="table-remove">
                                <button type="button" class="btn btn-warning btn-rounded btn-sm my-0">Edit</button>
                            </span>
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('post_delete', { 'id': post.id }) }}">
                            <span class="table-remove">
                                <button type="button" class="btn btn-danger btn-rounded btn-sm my-0">Remove</button>
                            </span>
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
        </div>
    </main>
{% endblock %}